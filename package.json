{
  "name": "gemini-ssh-assistant",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:back": "cd back && pnpm install && pnpm run build",
    "electron:dev": "npm run build:back && concurrently \"vite --config vite.config.electron.ts\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build:back && vite build --config vite.config.electron.ts && electron-builder",
    "electron:build:mac": "npm run electron:build -- --mac --arm64",
    "electron:build:win": "npm run electron:build -- --win --x64",
    "electron:build:linux": "npm run electron:build -- --linux"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "0.344.0",
    "openai": "^6.15.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "react-markdown": "9.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "socket.io-client": "^4.8.3",
    "xterm": "^5.3.0",
    "xterm-addon-canvas": "^0.5.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0",
    "xterm-addon-webgl": "^0.16.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "daisyui": "^5.5.14",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.gemini.ssh.assistant",
    "productName": "Gemini SSH",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "back/dist/**/*",
      "back/package.json",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "back/node_modules",
        "to": "back/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
